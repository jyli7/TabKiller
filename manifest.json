{
	"name": "TabKiller",
	"version": "0.1",
	"description": "Kills tabs discriminately. Sniper kills by partial title match. Bunker protects by partial title match (and kills everything else). Cannon kills tab ranges (e.g. 2-4).",
	"icons": { "16": "images/icon16.png",
	           "48": "images/icon48.png",
	          "128": "images/icon128.png" },
	"browser_action": {
		"default_icon": "images/icon48.png",
		"default_title": "TabKiller",
		"popup": "popup.html"
	},
	"background_page": "background.html",
	"permissions": [
		"tabs"
	],
	"content_scripts" : [
	{
		"matches": ["http://*/*", "https://*/*", "ftp://*/*"],
		"js": ["keyboard_shortcut.js"],
		"run_at": "document_start",
      	"all_frames": true		
	}
	]
}